<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <cz.roke.android.gorillaz.GameView
        android:id="@+id/GameView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/joystickA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/joystick" />
    <ImageView
        android:id="@+id/fireA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow_fire_reverse" />
    <ImageView
        android:id="@+id/joystickB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/joystick" />
    <ImageView
        android:id="@+id/fireB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/arrow_fire" />

    <!-- Joystick #1 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" >

        <Button
            android:id="@+id/butUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/butDown"
            android:background="@drawable/arrow_up"
            android:text="" />

        <Button
            android:id="@+id/butLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/butUp"
            android:background="@drawable/arrow_left"
            android:text="" />

        <Button
            android:id="@+id/butDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/butUp"
            android:layout_toRightOf="@id/butLeft"
            android:background="@drawable/arrow_down"
            android:text="" />

        <Button
            android:id="@+id/butRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/butUp"
            android:layout_toRightOf="@id/butDown"
            android:background="@drawable/arrow_right"
            android:text="" />

        <Button
            android:id="@+id/butFire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/butUp"
            android:background="@drawable/arrow_fire"
            android:text="" />
    </RelativeLayout>

    <!-- Joystick #2 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone" >

        <Button
            android:id="@+id/butLeftB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left"
            android:text="" />

        <Button
            android:id="@+id/butUpB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/butLeftB"
            android:background="@drawable/arrow_up"
            android:text="" />

        <Button
            android:id="@+id/butRightB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/butUpB"
            android:background="@drawable/arrow_right"
            android:text="" />

        <Button
            android:id="@+id/butDownB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/butUpB"
            android:layout_below="@id/butLeftB"
            android:background="@drawable/arrow_down"
            android:text="" />

        <Button
            android:id="@+id/butFireB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrow_fire_reverse"
            android:text="" />
    </RelativeLayout>

</RelativeLayout>
